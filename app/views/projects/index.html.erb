<p id="notice"><%= notice %></p>

<h1>Listing Projects</h1>

<%= form_for(:salary, method: :get) do |f| %>
    <div class="field">
      <%= f.label 'Total budget' %><%= f.label " #{cookies[:budget]}" %><br>
      <%= f.text_field :budget %>
    </div>
    <div class="field">
      <%= f.label 'Salary amount per project' %><%= f.label " #{cookies[:amount]}" %><br>
      <%= f.text_field :amount %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Employees count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.employees_count %></td>
        <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Project', new_project_path %>
